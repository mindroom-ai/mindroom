#!/usr/bin/env bash
set -e
if [[ ! -d "/home/basnijholt/Work/mindroom-2/widget" ]]; then
  echo "Cannot find source directory; Did you move it?"
  echo "(Looking for "/home/basnijholt/Work/mindroom-2/widget")"
  echo 'Cannot force reload with this script - use "direnv reload" manually and then try again'
  exit 1
fi

# rebuild the cache forcefully
_nix_direnv_force_reload=1 direnv exec "/home/basnijholt/Work/mindroom-2/widget" true

# Update the mtime for .envrc.
# This will cause direnv to reload again - but without re-building.
touch "/home/basnijholt/Work/mindroom-2/widget/.envrc"

# Also update the timestamp of whatever profile_rc we have.
# This makes sure that we know we are up to date.
touch -r "/home/basnijholt/Work/mindroom-2/widget/.envrc" "/home/basnijholt/Work/mindroom-2/widget/.direnv"/*.rc

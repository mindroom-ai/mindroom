# Supabase Configuration
# Copy this file to .env.local for development

# Supabase project configuration
# These will be provided when you create a project at https://app.supabase.com
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_KEY=your-service-role-key-here

# Stripe configuration
# Get these from your Stripe dashboard at https://dashboard.stripe.com
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key

# Stripe Price IDs (create these in Stripe dashboard)
PRICE_FREE=price_free
PRICE_STARTER_MONTHLY=price_starter_monthly_id
PRICE_STARTER_YEARLY=price_starter_yearly_id
PRICE_PROFESSIONAL_MONTHLY=price_professional_monthly_id
PRICE_PROFESSIONAL_YEARLY=price_professional_yearly_id
PRICE_ENTERPRISE_MONTHLY=price_enterprise_monthly_id
PRICE_ENTERPRISE_YEARLY=price_enterprise_yearly_id

# Instance Provisioner Service
# URL to your instance provisioning service
INSTANCE_PROVISIONER_URL=http://localhost:8002

# MindRoom Instance Configuration
# API key that instances will use to communicate with Supabase
MINDROOM_INSTANCE_API_KEY=your-instance-api-key

# Email configuration (using Resend)
# Get your API key from https://resend.com
RESEND_API_KEY=re_your_resend_api_key
FROM_EMAIL=noreply@mindroom.app
SUPPORT_EMAIL=support@mindroom.app

# Optional: SendGrid configuration (alternative to Resend)
# SENDGRID_API_KEY=SG.your_sendgrid_api_key

# Optional: Twilio configuration (for SMS notifications)
# TWILIO_ACCOUNT_SID=AC_your_account_sid
# TWILIO_AUTH_TOKEN=your_auth_token
# TWILIO_PHONE_NUMBER=+1234567890

# S3 Configuration (for backups)
# AWS or S3-compatible storage
S3_BUCKET_NAME=mindroom-backups
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=your_s3_access_key
S3_SECRET_ACCESS_KEY=your_s3_secret_key
S3_ENDPOINT=https://s3.amazonaws.com # Optional, for S3-compatible services

# Database connection (for direct access, not via Supabase API)
# This is automatically configured when running locally
DATABASE_URL=postgresql://postgres:postgres@localhost:54322/postgres

# Edge Function secrets
# Random secret for internal authentication between functions
INTERNAL_AUTH_SECRET=generate_a_random_secret_here

# Monitoring and Analytics (optional)
# SENTRY_DSN=https://your-sentry-dsn
# POSTHOG_API_KEY=your_posthog_api_key
# POSTHOG_HOST=https://app.posthog.com

# OAuth providers (optional)
# GITHUB_CLIENT_ID=your_github_client_id
# GITHUB_CLIENT_SECRET=your_github_client_secret
# GOOGLE_CLIENT_ID=your_google_client_id
# GOOGLE_CLIENT_SECRET=your_google_client_secret

# Development settings
NODE_ENV=development
DEBUG=true

# Production domain
PRODUCTION_DOMAIN=mindroom.app

# Default admin user (for initial setup)
ADMIN_EMAIL=admin@mindroom.app
ADMIN_PASSWORD=change_this_in_production

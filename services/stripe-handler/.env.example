# Server Configuration
PORT=3005
NODE_ENV=development

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_51...  # Your Stripe secret key
STRIPE_WEBHOOK_SECRET=whsec_...  # Your webhook endpoint secret from Stripe Dashboard
STRIPE_WEBHOOK_TOLERANCE=300     # Webhook signature tolerance in seconds
STRIPE_RETRY_ATTEMPTS=3          # Number of retry attempts for failed operations

# Stripe Price IDs (create these in your Stripe Dashboard)
STRIPE_PRICE_STARTER=price_1ABC...      # $49/month starter tier
STRIPE_PRICE_PRO=price_1DEF...          # $199/month professional tier
STRIPE_PRICE_ENTERPRISE=price_1GHI...   # Custom enterprise tier

# Supabase Configuration
SUPABASE_URL=https://xxx.supabase.co
SUPABASE_SERVICE_KEY=eyJ...  # Service role key with admin access

# Dokku Provisioner Service
DOKKU_PROVISIONER_URL=http://localhost:8002  # URL of the provisioner service
PROVISIONER_API_KEY=secret_provisioner_key   # API key for provisioner authentication
PROVISIONER_TIMEOUT=30000                    # Timeout in milliseconds

# Email Configuration (Resend)
EMAIL_PROVIDER=resend
RESEND_API_KEY=re_...  # Your Resend API key
EMAIL_FROM=noreply@mindroom.chat
EMAIL_FROM_NAME=MindRoom

# Alternative Email Providers (uncomment to use)
# EMAIL_PROVIDER=sendgrid
# SENDGRID_API_KEY=SG...
# EMAIL_FROM=noreply@yourdomain.com

# Business Logic Configuration
GRACE_PERIOD_DAYS=7   # Days before deprovisioning after payment failure
TRIAL_DAYS=14         # Length of trial period for new subscriptions

# Logging Configuration
LOG_LEVEL=info        # debug, info, warn, error
LOG_FORMAT=json       # json or pretty
